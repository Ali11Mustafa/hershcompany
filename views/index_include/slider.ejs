<div class="slider-area plr-185 mb-80 section">
    <div class="container-fluid">
        <div class="slider-content">
            <div class="active-slider-1 slick-arrow-1 slick-dots-1">
                <!-- layer-1 Start -->
                <% sliderProducts.forEach(function(product) { %>
                    <div class="col-lg-12">
                        <div class="layer-1">
                            <div class="slider-img">
                                <img src="uploads/product/<%= product.image[0] %>" alt="">
                            </div>
                            <div class="slider-info gray-bg">
                                <div class="slider-info-inner">
                                    <h1 class="slider-title-1 text-uppercase text-black-1">
                                        <%= product.productName %>
                                    </h1>
                                    <div class="slider-brief text-black-2">
                                        <p>
                                            <%= product.description %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <!-- layer-1 end -->
            </div>
        </div>
    </div>
</div>