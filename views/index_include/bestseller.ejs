<div class="best-seller-products-area sm-top">
    <div class="container container-wide">
        <div class="row">
            <div class="col-lg-5 m-auto text-center">
                <div class="section-title">
                    <h2 class="h3">Our Newest Car For Sale</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="product-wrapper">
                    <div class="product-carousel">
                        <!-- Start Product Item -->
                        <% carSales.forEach(function(product) { %>
                        <div class="product-item">
                            <div class="product-item__thumb">
                                <a href="/singleCarBeautifing?id=<%= product._id %>&categoreyId=<%= product.categories %>">
                                    <img class="thumb-primary" src="/<%= product.image[0] %>" alt="Product" />
                                    <img class="thumb-secondary" src="/<%= product.subImage1 %>" alt="Product" />
                                </a>
                            </div>

                            <div class="product-item__content">
                                <h4 class="title"><a href="/singleCarBeautifing?id=<%= product._id %>&categoreyId=<%= product.categories %>"><%= product.productName %></a></h4>
                                <span class="price"><strong>Price:</strong> <%= product.price %></span>
                            </div>
                        </div>
                        <% }); %>
                        <!-- End Product Item -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>