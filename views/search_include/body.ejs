<!-- Body main wrapper start -->
<div class="wrapper">
    <!-- START HEADER AREA -->
    <%- include('../partials/header'); %>
        <!-- END HEADER AREA -->
        <!-- Start page content -->
        <div class="featured-product-section section-bg-tb pt-80 pb-55">

            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-left mb-20">
                            <% if(locals.searchFor) {%>
                                <h2 class="uppercase">The Search Result Of
                                    <span style="color: red; opacity: .7;">
                                        <%= searchFor %>
                                    </span>
                                </h2>
                                <% } %>
                        </div>
                    </div>
                </div>
                <div class="featured-product">
                    <div class="row active-featured-product slick-arrow-2">
                        <!-- product-item start -->
                        <% allProducts.forEach(function(product) { %>
                            <div class="col-lg-12">
                                <div class="product-item product-item-2">
                                    <div class="new-product-img">
                                        <a href="/single_product?id=<%= product._id %>&categoreyId=<%= product.categories._id %>">
                                            <img src="uploads/product/<%= product.image[0]%>" alt=""/>
                                        </a>
                                    </div>
                                    <div class="product-info">
                                        <h6 class="product-title">
                                            <a href="/single_product?id=<%= product._id %>&categoreyId=<%= product.categories._id %>">
                                                <%=product.name %>
                                            </a>
                                        </h6>
                                        <h6 class="brand-name">
                                            <%=product.brandName %>
                                        </h6>
                                        <h3 class="pro-price">
                                            <%=product.price %>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                                <!-- product-item end -->
                    </div>
                </div>
            </div>
        </div>
        <!-- End page content -->

        <!-- START FOOTER AREA -->
        <%- include('../partials/footer'); %>
            <!-- END FOOTER AREA -->
</div>
<!-- Body main wrapper end -->