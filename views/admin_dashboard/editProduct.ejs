<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<form class="form-horizontal" action="/admin_dashboard/update/<%=product[0]._id%>" method="post" enctype="multipart/form-data" style="padding: 9rem;">

    <fieldset>
        <!-- Form Name -->
        <legend>UPDATE PRODUCTS</legend>
        <a href="/admin_dashboard">got admin dashboard</a>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_name">PRODUCT NAME</label>
            <div class="col-md-4">
                <input id="product_name" name="productName" placeholder="PRODUCT NAME" class="form-control input-md"  type="text" value="<%= product[0].productName %>">
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_description">PRODUCT DESCRIPTION</label>
            <div class="col-md-4">
                <textarea class="form-control" id="product_description" name="description"><%= product[0].description%></textarea>
            </div>
        </div>

         <div class="form-group">
            <label class="col-md-4 control-label" for="product_categorie">PRODUCT CATEGORY</label>
            <div class="col-md-4">
                <select name="categories" id="category" class="form-control">
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }); %>
                    </select>
            </div>
        </div> 

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="available_quantity">PRODUCT PRICE</label>
            <div class="col-md-4">
                <input id="available_quantity" name="price" placeholder="AVAILABLE QUANTITY" class="form-control input-md"  type="number" value="<%= product[0].price%>">
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_weight">PRODUCT BRAND</label>
            <div class="col-md-4">
                <input id="product_weight" name="brandName" placeholder="PRODUCT BRAND" class="form-control input-md"  type="text" value="<%= product[0].brandName%>">
            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_description">PRODUCT INFORMATION</label>
            <div class="col-md-4">
                <textarea class="form-control" id="product_description" name="information"><%= product[0].information%></textarea>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="percentage_discount">PRODUCT FILE SETUP</label>
            <div class="col-md-4">
                <input id="percentage_discount" name="fileSetUp" placeholder="PRODUCT FILE SETUP" class="form-control input-md"  type="text" value="<%= product[0].fileSetUp%>">
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="online_date">Create Date or Manual Date (date and time):</label>
            <div class="col-md-4">
                <input type="datetime-local" id="online_date" name="time" placeholder="ONLINE DATE" class="form-control input-md"  type="text" value="<%= product[0].time%>">
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="image">PRODUCT IMAGE(263 * 292)</label>
                <div class="col-md-4">
                    <input id="image" name="image" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="/<%=product[0].image%>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="sliderImage">SLIDER IMAGE(1479 * 211)</label>
                <div class="col-md-4">
                    <input id="sliderImage" name="sliderImage" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="<%= product[0].sliderImage%>">
                </div>
            </div>
            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="backgroundImageForProduct">PRODUCT BACKGROUND IMAGE(1479 * 211)</label>
                <div class="col-md-4">
                    <input id="backgroundImageForProduct" name="backgroundImageForProduct" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="<%= product[0].backgroundImageForProduct%>">
                </div>
            </div>
            <!-- Button -->
            <hr>
            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="subImage1">SUB IMAGE 1</label>
                <div class="col-md-4">
                    <input id="subImage1" name="subImage1" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="<%= product[0].subImage1%>">
                </div>
            </div>
            <!-- Button -->
            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="subImage2">SUB IMAGE 2</label>
                <div class="col-md-4">
                    <input id="subImage2" name="subImage2" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="<%= product[0].subImage2%>">
                </div>
            </div>
            <!-- Button -->
            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="subImage3">SUB IMAGE 3</label>
                <div class="col-md-4">
                    <input id="subImage3" name="subImage3" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="<%= product[0].subImage3%>">
                </div>
            </div>
            <!-- Button -->
            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="subImage4">SUB IMAGE 4</label>
                <div class="col-md-4">
                    <input id="subImage4" name="subImage4" placeholder="IMAGE UPLOAD" class="form-control input-md"  type="file" value="<%= product[0].subImage4%>">
                </div>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="singlebutton">ADDING PRODUCT</label>
                <div class="col-md-4">
                    <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-primary">SUBMIT</button>
                </div>
            </div>
    </fieldset>
</form>